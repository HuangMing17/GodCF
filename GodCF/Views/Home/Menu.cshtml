@{
    ViewData["Title"] = "Thực đơn";
}

@section Styles {
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true">
}

<main class="menu-page">
    <section class="menu-header">
        <h2>Thực đơn của chúng tôi</h2>
        <div class="menu-filters">
            <button class="filter-btn active" data-category="all">Tất cả</button>
            <button class="filter-btn" data-category="coffee">Cà phê</button>
            <button class="filter-btn" data-category="tea">Trà</button>
            <button class="filter-btn" data-category="pastries">Bánh ngọt</button>
            <button class="filter-btn" data-category="smoothies">Sinh tố</button>
        </div>
    </section>

    <section class="menu-grid">
        <!-- Coffee Items -->
        <div class="menu-item" data-category="coffee">
            <img src="~/images/menu/cafe-sua.jpg" alt="Cà phê sữa">
            <div class="item-info">
                <h3>Cà phê sữa</h3>
                <p>Cà phê đậm đà với sữa đặc thơm béo</p>
                <div class="item-footer">
                    <span class="price">35.000đ</span>
                    <button class="add-to-cart" data-id="1">
                        <i class="fas fa-shopping-cart"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>

        <div class="menu-item" data-category="coffee">
            <img src="~/images/menu/cafe-den.jpg" alt="Cà phê đen">
            <div class="item-info">
                <h3>Cà phê đen</h3>
                <p>Cà phê nguyên chất đậm đà</p>
                <div class="item-footer">
                    <span class="price">29.000đ</span>
                    <button class="add-to-cart" data-id="2">
                        <i class="fas fa-shopping-cart"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>

        <!-- Tea Items -->
        <div class="menu-item" data-category="tea">
            <img src="~/images/menu/tra-dao.jpg" alt="Trà đào">
            <div class="item-info">
                <h3>Trà đào</h3>
                <p>Trà đào thơm mát với đào tươi</p>
                <div class="item-footer">
                    <span class="price">45.000đ</span>
                    <button class="add-to-cart" data-id="3">
                        <i class="fas fa-shopping-cart"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>

        <!-- Pastries Items -->
        <div class="menu-item" data-category="pastries">
            <img src="~/images/menu/tiramisu.jpg" alt="Tiramisu">
            <div class="item-info">
                <h3>Tiramisu</h3>
                <p>Bánh tiramisu thơm ngon</p>
                <div class="item-footer">
                    <span class="price">55.000đ</span>
                    <button class="add-to-cart" data-id="4">
                        <i class="fas fa-shopping-cart"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>

        <!-- Smoothies Items -->
        <div class="menu-item" data-category="smoothies">
            <img src="~/images/menu/sinh-to-dau.jpg" alt="Sinh tố dâu">
            <div class="item-info">
                <h3>Sinh tố dâu</h3>
                <p>Sinh tố dâu tươi ngon</p>
                <div class="item-footer">
                    <span class="price">49.000đ</span>
                    <button class="add-to-cart" data-id="5">
                        <i class="fas fa-shopping-cart"></i>
                        Thêm vào giỏ
                    </button>
                </div>
            </div>
        </div>
    </section>

    <div class="shopping-cart-preview">
        <div class="cart-header">
            <h3>Giỏ hàng</h3>
            <span class="cart-count">0</span>
        </div>
        <div class="cart-items">
            <!-- Cart items will be added here dynamically -->
        </div>
        <div class="cart-footer">
            <div class="total">
                <span>Tổng cộng:</span>
                <span class="total-amount">0đ</span>
            </div>
            <button class="checkout-btn">Thanh toán</button>
        </div>
    </div>
</main>

@section Scripts {
    <script src="~/js/menu.js"></script>
}